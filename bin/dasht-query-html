#!/bin/sh -e
#
# Decorates dasht-query-line(1) results as HTML table rows.
#
# Written in 2016 by Suraj N. Kurapati <https://github.com/sunaku/dasht>
# Distributed under the terms of the ISC license (see the LICENSE file).

query=$(echo "$1" | tr -s '[:space:]*' '||' | tr '?' '.' | sed 's/\[!/[^/g')
test -n "$query"

dasht-query-line "$@" | awk -v IGNORECASE=1 '
  { result[$1] = substr($0, index($0, $2) + length($2) + 1) }
  $1 == "name" { gsub("'"$query"'", "<b><i>&</i></b>", result["name"]) }
  $1 == "url" { print \
    "<tr>"\
      "<td><a href=\"" result["url"] "\">" result["name"] "</a></td>"\
      "<td align=\"right\">" result["from"] "</td>"\
      "<td>" tolower(result["type"]) "</td>"\
    "</tr>"
  }
'
